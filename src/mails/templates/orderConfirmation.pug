doctype html
html(lang="ar", dir="rtl")
    head
        title تأكيد الطلب
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        style.
            body {
                font-family: Arial, sans-serif;
                display: flex;
                justify-content: center;
                align-items: center;
                background-color: #f0f2f5;
                color: #333;
                margin: 0;
                padding: 0;
                height: 100vh;
                direction: rtl;
            }
            .container {
                background-color: #fff;
                padding: 25px;
                border-radius: 8px;
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
                max-width: 500px;
                text-align: center;
            }
            h1 {
                color: #007BFF;
                font-size: 24px;
                margin-bottom: 20px;
            }
            p {
                font-size: 16px;
                line-height: 1.5;
                color: #555;
                margin: 10px 0;
            }
            .book-details {
                margin: 20px 0;
                padding: 15px;
                border: 1px solid #ddd;
                border-radius: 5px;
                background-color: #f9f9f9;
                text-align: right;
            }
            .book-title {
                font-weight: bold;
                font-size: 18px;
                color: #007BFF;
            }
            .book-author {
                color: #555;
                font-style: italic;
            }
            .order-info {
                margin: 20px 0;
                font-weight: bold;
            }
            .price {
                color: #28a745;
                font-size: 18px;
                font-weight: bold;
            }
            .footer {
                font-size: 14px;
                color: #888;
                margin-top: 20px;
            }
            .status {
                font-weight: bold;
                color: #28a745;
                font-size: 16px;
            }
    body
        .container
            h1 تأكيد الطلب
            p ،#{userName} مرحباً 
            p : نشكرك على طلبك. تفاصيل طلبك كالتالي
            .book-details
                p.book-title #{bookTitle}
                p.book-author بواسطة: #{authorName}
                if description
                    p #{description.substring(0, 100)}
            .order-info
                p #{orderId} : رقم الطلب
                if paymentMethod === 'free'
                    p طريقة الدفع: مجاني
                    p.status حالة الطلب: مكتمل
                else if paymentMethod === 'points'
                    p طريقة الدفع: نقاط
                    p النقاط المستخدمة: #{points}
                    p.status حالة الطلب: مكتمل
                else
                    p طريقة الدفع: دفع إلكتروني
                    p.price EGP #{price} : السعر
                    p.status حالة الطلب: #{status === 'completed' ? 'مكتمل' : 'قيد الانتظار'}
            
            if status !== 'completed' && paymentUrl
                p : يمكنك إكمال الدفع من خلال الرابط التالي
                p 
                    a(href=paymentUrl) إكمال الدفع
            
            p.footer
                | للمساعدة، يرجى التواصل مع إدارة سرد على 
                a(href="mailto:support@sard.com") support@sard.com
            p.footer شكراً، فريق سرد
